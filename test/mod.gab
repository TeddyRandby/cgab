Test:describe('Effects') do
    def once = do
        yield 1
        2
    end

    def twice = do
        yield 1
        yield 2

        3
    end

    def receive_one = do
        let val = yield

        1:expect(val)
    end

    def receive_onetwo = do
        let one, two = yield
        
        1:expect(one)
        2:expect(two)
    end

    def onetwo = do
        return 1,2 
    end

    def yields_many = do
        yield onetwo()
    end

   Test:it('should yield once') do
       let val, eff = once()

       1:expect(val)
       2:expect(eff())
   end

   Test:it('should yield twice') do
       let _, eff = twice()

       let valtwo, efftwo = eff()

       2:expect(valtwo)
       3:expect(efftwo())
   end

   Test:it('should receive a value') do
       let eff = receive_one()

       eff(1)
   end

   Test:it('should yield var') do
       let one, two, eff = yields_many()
       1:expect(one)
       2:expect(two)
   end

   Test:it('should receive var') do
       let eff = receive_onetwo()

       eff(onetwo())
   end
end

Test:describe('Lists') do
    Test:it('should create') do
        let list = List:new(100)

        list:expect_not(nil)
    end

    Test:it('should put') do
        let list = List:new

        list:at(0):expect(nil)

        list:push('hello')

        list:at(0):expect('hello')

        list:put(2, 'hello')

        list:at(2):expect('hello')
    end

    Test:it('should get/set') do
        let list = List:new

        list[0]:expect(nil)

        list[0] = 5

        list[0]:expect(5)

        list[10] = 10

        list[10]:expect(10)

        list[9]:expect(nil)
    end

    Test:it('should index with range') do
        let list = List:new(5):map! do (_, i) i + 1 end

        let slice = list[3:to]

        slice[0]:expect(1)
        slice[2]:expect(3)

        slice = list[3:to(4)]

        slice[0]:expect(4)
        slice[1]:expect(nil)
    end
end

