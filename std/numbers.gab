:use 'num'

def nums.int_between[](a, b)
  :float.between(a, b):floor
end

def _nums.from[nil](n)
  { from = n }
end

def _nums.from[.gab.number](n)
  { from = n, to = self }
end

def from[.gab.number](src)
  src:_num.from(self)
end

def _nums.to[nil](n)
  { to = n }
end

def _nums.to[.gab.number](n)
  { from = self, to = n }
end

def to[.gab.number](dest)
  dest:_num.to(self)
end

def times[.gab.number](cb)
  (self > 0) :and => cb()

  (self > 1) :and => (self - 1) :times(cb)
end

